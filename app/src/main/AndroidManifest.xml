<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.a1exs.srez">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".common.api.app.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Srez"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".controller.RegInfoActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".controller.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.MainActivity"
            android:exported="true" />
    </application>

</manifest>